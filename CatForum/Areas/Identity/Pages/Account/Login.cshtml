@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2 class="mt-4">Login</h2>

<div class="row align-items-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn text-black fs-6 w-100" style="background-color: #f5f5f5; border: 1px solid black;">Login</button>
                </div>
                <div>
                    <p class="mt-3">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-dark">Forgot password</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark">Register as new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-dark">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <div class="col-md-4 d-flex justify-content-center">
        <img src="~/images/cat-animation.gif" alt="Cat Animation" class="img-fluid"
             style="max-width: 350px; margin-top: -80px; margin-left: 50px;" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
